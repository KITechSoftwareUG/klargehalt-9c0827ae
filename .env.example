# ============================================================================
# KlarGehalt - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# ============================================================================

# ============================================================================
# Clerk Authentication
# ============================================================================
# Get these from: Clerk Dashboard → API Keys

# Clerk Publishable Key (public, safe for client-side)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...

# Clerk Secret Key (private, server-side only)
CLERK_SECRET_KEY=sk_test_...

# Clerk Sign-in/Sign-up URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# Clerk Fallback Redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/onboarding
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# ============================================================================
# Supabase Configuration (for database only)
# ============================================================================
# Get these from: Supabase Dashboard → Settings → API

# Your Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase Anon/Public Key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here


# Optional: Supabase Service Role Key (for server-side operations)
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# Application Configuration
# ============================================================================

# Application URL (for production)
# NEXT_PUBLIC_APP_URL=https://klargehalt.de

# Environment (development, staging, production)
# NODE_ENV=development

# ============================================================================
# Email Configuration (Optional - for future use)
# ============================================================================

# SMTP Server
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password
# SMTP_FROM=noreply@klargehalt.de

# ============================================================================
# Analytics (Optional)
# ============================================================================

# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics (automatically enabled on Vercel)
# No configuration needed

# ============================================================================
# Feature Flags (Optional)
# ============================================================================

# Enable/disable features
# NEXT_PUBLIC_ENABLE_CONSULTING_BOOKING=true
# NEXT_PUBLIC_ENABLE_CSV_IMPORT=false
# NEXT_PUBLIC_ENABLE_API=false

# ============================================================================
# Security (Optional)
# ============================================================================

# Rate limiting
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=60000

# Session timeout (in seconds)
# SESSION_TIMEOUT=3600

# ============================================================================
# Development (Optional)
# ============================================================================

# Enable debug mode
# DEBUG=false

# Show detailed error messages
# NEXT_PUBLIC_SHOW_ERRORS=false

# ============================================================================
# Notes
# ============================================================================
# 
# 1. NEVER commit .env to version control
# 2. Use NEXT_PUBLIC_ prefix for variables that need to be available in the browser
# 3. Variables without NEXT_PUBLIC_ are only available server-side
# 4. Restart the dev server after changing environment variables
# 
# ============================================================================
